<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/rl_signup"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:backgroundTint="@color/pink"
                android:hint="@string/email" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_mobile"
                android:layout_width="match_parent"
                android:inputType="phone"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:backgroundTint="@color/pink"
                android:hint="@string/mobileNumber" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_first_name"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:backgroundTint="@color/pink"
                android:hint="@string/fullName" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_last_name"
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:backgroundTint="@color/pink"
                android:hint="@string/lastName" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:backgroundTint="@color/pink"
                android:hint="@string/passowrd" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/loginBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@drawable/pink_button_background"
            android:padding="3dp"
            android:textAllCaps="false"
            android:text="@string/signUp"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/login_layout"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"/>

    <LinearLayout android:id="@+id/linear_layout_fb"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/line"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <Button android:id="@+id/fb"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_facebook"
            android:background="@drawable/fb_background"
            android:text="Facebook"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:paddingLeft="12dp"
            android:textColor="#ffffff"
            />

        <Button android:id="@+id/insta"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:drawableLeft="@drawable/ic_instagram"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/insta_background"
            android:text="Instagram"
            android:textAllCaps="false"
            android:textColor="#000000"
            />

    </LinearLayout>

</RelativeLayout>