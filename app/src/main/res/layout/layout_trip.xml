<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/nature"
        android:layout_height="230dp">

        <TextView
            android:id="@+id/dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dollar"
            android:padding="10dp"
            android:text="$300"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="16dp">

            <ImageView
                android:id="@+id/i1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_fiber_manual_record_black_24dp"
                app:layout_constraintBottom_toBottomOf="@id/tv1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv1" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:text="wigan"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/i1"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v1"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@id/i1"
                app:layout_constraintStart_toStartOf="@id/i1"
                app:layout_constraintTop_toBottomOf="@id/i1" />

            <ImageView
                android:id="@+id/i2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_person_pin_circle_black_24dp"
                app:layout_constraintEnd_toEndOf="@id/i1"
                app:layout_constraintStart_toStartOf="@id/i1"
                app:layout_constraintTop_toBottomOf="@id/i1" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halifax"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/i2"
                app:layout_constraintStart_toEndOf="@id/i2"
                app:layout_constraintTop_toTopOf="@id/i2" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Mon, 23 May, 2019"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/i2"
                app:layout_constraintTop_toTopOf="@id/i2" />

            <View
                android:id="@+id/v2"
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/t3"
                app:layout_constraintStart_toEndOf="@id/t3"
                app:layout_constraintTop_toTopOf="@id/t3" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="7:00 AM"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@id/v2"
                app:layout_constraintStart_toEndOf="@id/v2"
                app:layout_constraintTop_toTopOf="@id/v2" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawableStart="@drawable/ic_person_pin_circle_black_24dp"
                android:drawableLeft="@drawable/ic_person_pin_circle_black_24dp"
                android:drawablePadding="2dp"
                android:text="Car"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@id/t3"
                app:layout_constraintTop_toBottomOf="@id/t3" />

            <View
                android:id="@+id/v3"
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/tv5"
                app:layout_constraintStart_toEndOf="@id/tv5"
                app:layout_constraintTop_toTopOf="@id/tv5" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:drawableStart="@drawable/ic_person_pin_circle_black_24dp"
                android:drawableLeft="@drawable/ic_person_pin_circle_black_24dp"
                android:drawablePadding="2dp"
                android:text="1m &amp; 1F"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/v3"
                app:layout_constraintStart_toStartOf="@id/v3"
                app:layout_constraintTop_toTopOf="@id/v3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>